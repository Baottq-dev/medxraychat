# ==============================================
# MedXrayChat Production Environment Variables
# ==============================================
# Copy this to .env and fill in real values
# IMPORTANT: Never commit .env file to git!

# PostgreSQL Database
POSTGRES_USER=medxray
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE
POSTGRES_DB=medxraychat

# Security - MUST CHANGE!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-min-32-characters

# ==============================================
# AI Models Configuration
# ==============================================
# IMPORTANT: Set MOCK_QWEN_SERVICE=false to use real Qwen model
MOCK_QWEN_SERVICE=false

# AI Device: auto, cuda, cuda:0, cpu
AI_DEVICE=auto

# Model paths (inside container)
YOLO_MODEL_PATH=/app/weights/yolo/best.pt
# Use local weights folder or HuggingFace model name
QWEN_MODEL_NAME=/app/weights/qwen

# ==============================================
# Frontend URLs
# ==============================================
# Change these to your server IP or domain
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://YOUR_SERVER_IP:8000/api/v1/ws
FRONTEND_URL=http://YOUR_SERVER_IP:3000
