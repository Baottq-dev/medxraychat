# MedXrayChat Backend Dockerfile
# For GPU server deployment with YOLO + Qwen3-VL
#
# Build: docker build -f docker/Dockerfile.backend -t medxraychat-backend ..
# Run:   docker run --gpus all -p 8000:8000 medxraychat-backend

FROM nvidia/cuda:12.1.1-runtime-ubuntu22.04

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive
ENV TORCH_HOME=/app/.cache/torch
ENV HF_HOME=/app/.cache/huggingface
ENV TRANSFORMERS_CACHE=/app/.cache/huggingface

# Install system dependencies
RUN apt-get update && apt-get install -y \
    software-properties-common \
    && add-apt-repository ppa:deadsnakes/ppa -y \
    && apt-get update && apt-get install -y \
    python3.11 \
    python3.11-venv \
    python3.11-dev \
    python3.11-distutils \
    libgl1-mesa-glx \
    libglib2.0-0 \
    curl \
    git \
    git-lfs \
    && rm -rf /var/lib/apt/lists/*

# Install pip for Python 3.11
RUN curl -sS https://bootstrap.pypa.io/get-pip.py | python3.11

# Set Python 3.11 as default
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1 \
    && update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1

# Create app directory
WORKDIR /app

# Copy requirements first (for caching)
COPY apps/api/requirements.txt .

# Install Python dependencies using Python 3.11
RUN python3.11 -m pip install --no-cache-dir --upgrade pip && \
    python3.11 -m pip install --no-cache-dir -r requirements.txt && \
    python3.11 -m pip install --no-cache-dir --upgrade "transformers>=4.51.0" qwen-vl-utils

# Copy MFF custom modules into ultralytics package
COPY mff_modules.py /usr/local/lib/python3.11/dist-packages/ultralytics/nn/modules/mff_modules.py
RUN echo "from .mff_modules import FAHG, FFM_Concat, MSPLC, C3_MSLC, C3_MSLC2" >> /usr/local/lib/python3.11/site-packages/ultralytics/nn/modules/__init__.py

# Copy application code
COPY apps/api/ .

# Create directories
RUN mkdir -p /app/uploads /app/weights/yolo /app/weights/qwen /app/.cache

# NOTE: Model weights should be mounted as volumes in docker-compose
# COPY weights/ /app/weights/  # Commented - use volume mount instead

# Expose port
EXPOSE 8000

# Health check with longer start period for model loading
HEALTHCHECK --interval=30s --timeout=10s --start-period=180s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application with optimal settings
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
